<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Company</th>
      <th>Flight duration</th>
      <th>Start time</th>
      <th>Arrival airport</th>
      <th>Departure airport</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.number %></td>
        <td><%= flight.company %></td>
        <td><%= flight.flight_duration %></td>
        <td><%= flight.start_time %></td>
        <td><%= flight.arrival_airport_id %></td>
        <td><%= flight.departure_airport_id %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

